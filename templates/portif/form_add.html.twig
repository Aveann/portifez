{% extends 'base.html.twig' %}

{% block title %}{{block_title}}{% endblock %}

{% block body %}

<style>
	//div { border: solid 1px black;}
	#output_image {
		max-height: 400px;
	}
	
	#containerImg {
		position: relative;
		overflow: hidden; 
	}
    .centered:hover{
		background-color: rgba(255, 255, 255, 0.5);
		filter: alpha(opacity=50); /* For IE8 and earlier */
	}
    .centered {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		height: 100%;
		width: 100%;
	}
</style>

<div class="container bg-light">

	<div class="mx-auto mw-100" style="width: 400px;">
		{% if error %}
			<div class="alert alert-danger">
				{{ error }}
			</div>
		{% endif %}
		{% if success %}
			<div class="alert alert-success">
				{{ success }}
			</div>
		{% endif %}
		
		{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.about) }}
		<div class="form-group">
		{{form_row(form.illustration_activated, {'id': 'input_bool'})}}
		</div>
		
		<div class="form-group" id="containerImg">
			<label class="centered btn-file">
				<div class="ml-5">
					<kbd>Ajouter Image du portif</kbd>
				</div>
				<div style="display: none;">
					{{ form_row(form.illustration, {'id': 'input_image'} ) }}
				</div>
			</label>
			
			
			<img src="{{default_illustration}}" alt="illustration" class="img-fluid" id="output_image" />

			
		</div>
		
			{{ form_row(form.submit)}}
		{{ form_end(form) }}
		
	</div>

	
<script src="/js/inputImage.js"></script>
<script src="/js/hideInputImage.js"></script>	
	
</div>
{% endblock %}
